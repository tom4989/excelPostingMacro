Attribute VB_Name = "主処理"
Option Explicit

' *********************************************************************************************************************
' 変数
' *********************************************************************************************************************
'
Dim obj設定値シート As cls設定値シート

' *********************************************************************************************************************
' ブックを開いた場合の処理
' *********************************************************************************************************************
'
Sub Auto_Open()

    Application.OnKey "%{F3}", "転記処理"

End Sub

' *********************************************************************************************************************
' 転記処理
' *********************************************************************************************************************
'
Sub 転記処理()

    ' エラートラップ
    On Error GoTo ErrorCatch

    Dim objアプリケーション制御 As New clsアプリケーション制御
    objアプリケーション制御.アプリケーション制御切替 (False)

    ' 本処理

    ' -----------------------------------------------------------------------------------------------------------------
    ' 設定値の取得
    ' -----------------------------------------------------------------------------------------------------------------
    '
    Set obj設定値シート = New cls設定値シート
    obj設定値シート.ロード

    ' -----------------------------------------------------------------------------------------------------------------
    ' 転記先情報の取得
    ' -----------------------------------------------------------------------------------------------------------------
    '
    Dim wb転記先 As Workbook
    Set wb転記先 = ActiveWorkbook

    ' -----------------------------------------------------------------------------------------------------------------
    ' 転記元シートの処理
    ' -----------------------------------------------------------------------------------------------------------------
    '
    Dim obj転記元シート As cls転記元シート
    Set obj転記元シート = New cls転記元シート
    Call obj転記元シート.初期化(obj設定値シート)
    Call obj転記元シート.シート読込
    
    ' -----------------------------------------------------------------------------------------------------------------
    ' 転記先シートの処理
    ' -----------------------------------------------------------------------------------------------------------------
    '
    ' 設定値の取得
    Dim obj転記先シート As cls転記先シート
    Set obj転記先シート = New cls転記先シート
    
    If obj転記先シート.初期化(obj設定値シート, wb転記先) Then
    
        Call obj転記先シート.転記(wb転記先, obj転記元シート)
    
    End If
    
    ' 正常終了
    GoTo Finally

ErrorCatch:

Finally:

    '実行前の状態に戻す
    objアプリケーション制御.アプリケーション制御切替 (True)
    
End Sub

